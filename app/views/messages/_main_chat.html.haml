.chat-main
  .chat-main__group-info
    .chat-main__group-info__box
      .chat-main__group-info__box__group--name
        TECHEXPERT
      .chat-main__group-info__box__member
        Member: 森中
    = link_to "#", class: "chat-main__group-info__btn" do
      Edit

  .chat-main__message-list
    .chat-main__message-list__box
      .chat-main__message-list__box__data
        .chat-main__message-list__box__data__name
          masa
        .chat-main__message-list__box__data__day
          2019
      .chat-main__message-list__box__text
        おはよう！
  .chat-main__message-form
    .chat-main__message-form__form
      .chat-main__message-form__form__input-box
        = form_for [@group, @message] do |f|
          = f.text_field :content, class: 'text', placeholder: 'type a message'
          = f.label :image, class: "image" do
            = icon('fas', 'image')
            = f.file_field :image, class: 'image__file'
          = f.submit 'Send', class: 'form__submit-btn'

