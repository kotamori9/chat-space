.chat-main
  .chat-main__group-info
    .chat-main__group-info__box
      .chat-main__group-info__box__group--name
        = @group.name
      .chat-main__group-info__box__member
        Member:
        - @group.users.each do |member|
          = member.name
    = link_to edit_group_path(@group), class: "chat-main__group-info__btn" do
      Edit
  .hako
    = render @messages

  .chat-main__message-form
    .chat-main__message-form__form
      .chat-main__message-form__form__input-box
        = form_for [@group, @message] do |f|
          = f.text_field :content, class: 'text', placeholder: 'type a message'
          = f.label :image, class: "image" do
            = icon('fas', 'image')
            = f.file_field :image, class: 'image__file'
          = f.submit 'Send', class: 'form__submit-btn'