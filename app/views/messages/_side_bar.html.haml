.side-bar
  .side-bar__user-name
    .side-bar__user-name__box
      .side-bar__user-name__box--namebox
        = current_user.name
      .side-bar__user-name__box--iconbox
        = link_to new_group_path do
          = icon('far','edit', class: "side-bar__user-name__box--iconbox__edit--btn")
        = link_to edit_user_path(current_user) do
          = icon('fas', 'cog', class: ' side-bar__user-name__box--iconbox__cog--btn')
  

  .side-bar__group--list
    .side-bar__group--list__box
      - current_user.groups.each do |group|
        .group
          = link_to '#' do
            .side-bar__group--list__box__name
              = group.name
            .side-bar__group--list__box__message
              メッセージはまだありません